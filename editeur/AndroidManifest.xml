<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.neat"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.neat.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.neat.EditorActivity"
            android:label="@string/title_activity_editor"
            android:parentActivityName="com.example.neat.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.neat.MainActivity" />
        </activity>
        <activity
            android:name="com.example.neat.TutoActivity"
            android:label="@string/title_activity_tuto"
            android:parentActivityName="com.example.neat.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.neat.MainActivity" />
        </activity>
        <activity
            android:name="com.example.neat.FileChooserActivity"
            android:label="@string/title_activity_file_chooser"
            android:parentActivityName="com.example.neat.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.neat.MainActivity" />
        </activity>
        <activity
            android:name="com.example.neat.EditActivity"
            android:label="@string/title_activity_edit"
            android:parentActivityName="com.example.neat.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.neat.MainActivity" />
        </activity>
        <activity
            android:name="com.example.neat.PopSaveActivity"
            android:label="@string/title_activity_pop_save"
            android:parentActivityName="com.example.neat.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.neat.MainActivity" />
        </activity>
    </application>

</manifest>